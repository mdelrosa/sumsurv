extends layout

block scripts
  script(type='text/javascript', src='/javascripts/take_survey.js')

block content
  -var datedata = new Date();
  -if (datedata.getDay() == 0) {var day = 7} else {day = datedata.getDay()};
  -var lastday = datedata.getDate()+7-day;
  -var firstday = datedata.getDate()-day; 
  -var month = datedata.getMonth() +1;
  -var year = datedata.getFullYear(); 
